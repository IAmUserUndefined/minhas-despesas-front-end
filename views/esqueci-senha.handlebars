<section>
    <article class="container-fluid">
        <div class="row align-items-md-center" style="height: 60vh;">
            <div class="col-sm-8 mx-auto mt-5">
                <form class="form-control p-3" name="recoverPasswordForm">

                    <h3 class="text-center mb-3">Esqueci Minha Senha</h3>


                    <input class="form-control mb-3" type="email" name="email" placeholder="Seu E-mail">

                    <button type="button" class="btn btn-secondary d-block mx-auto mb-3" name="button"
                            onclick="recoverPassword()" data-bs-dismiss="modal">
                            Enviar Email
                    </button>

                    <a href="/" class="text-center text-secondary d-block mb-3 fw-bold">
                        Lembrou sua senha?
                    </a>
                </form>
            </div>
        </div>
    </article>

    <article class="modal fade" id="message" tabindex="-1" aria-labelledby="message" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">

                <div class="modal-header">
                    <h5 class="modal-title" id="message">Mensagem</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>

                <div class="modal-body">
                    <h3 id="response" class="text-center"></h3>
                </div>

            </div>
        </div>
    </article>
</section>